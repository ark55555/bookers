<h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book, method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
        
        
      </tr>
      <% end %>
    </tbody>
  </table>
  <h2>New book</h2>
  <%= form_with model:@book, local:true do |f| %>

    <label for="book_title">Title</label>
    <%= f.text_field :title %>
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
    <br><%= f.submit 'Create book' %></br>

  <% end %>